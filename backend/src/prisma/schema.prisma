// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Use environment variables for database connection
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  messages  Message[]
}

model Message {
  id        Int     @id @default(autoincrement())
  content   String
  senderId  Int
  user      User    @relation(fields: [senderId], references: [id])
}
